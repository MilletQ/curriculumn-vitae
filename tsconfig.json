{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "ignoreDeprecations": "5.0", // 忽略废弃警告
    "verbatimModuleSyntax": true // 替换废弃选项
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
